<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_margin="8dp"
   android:background="@drawable/covercard">

   <ImageView
      android:id="@+id/imageView"
      android:layout_width="163dp"
      android:layout_height="140dp"
      android:layout_marginBottom="100dp"
      android:src="@drawable/gambarmakanan"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/roti_bakar_edi"
      android:textColor="@color/greendark"
      android:fontFamily="@font/assistant"
      android:textSize="12sp"
      app:layout_constraintStart_toStartOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

   <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="11dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:fontFamily="@font/assistant"
      android:text="@string/_8_menit"
      android:textColor="@color/greendark"
      app:layout_constraintBottom_toTopOf="@+id/detailReceiptButton"
      app:layout_constraintEnd_toStartOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

   <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="@string/food_material"
      android:textColor="@color/greendark"
      android:fontFamily="@font/assistant"
      app:layout_constraintBottom_toBottomOf="@+id/textView5"
      app:layout_constraintStart_toEndOf="@+id/textView5"
      app:layout_constraintTop_toTopOf="@+id/textView5" />

   <Button
      android:id="@+id/detailReceiptButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/detail_receipt"
      android:textColor="@color/greendark"
      android:background="@drawable/button_card"
      app:layout_constraintTop_toBottomOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>